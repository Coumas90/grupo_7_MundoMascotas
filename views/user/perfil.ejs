<!DOCTYPE html>
    <html lang ="es">
      %- include('../partials/head.ejs') %>
      <head>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Mundo Mascotas</title>
        <!-- Fonts -->
            <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500" rel="stylesheet">
        <!-- CSS -->
        <link rel="stylesheet" TYPE href="css/styles.css" />
        <link rel="stylesheet" href="/css/color.css" />
              <meta name="robots" content="noindex,follow" />
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
      </head>

        <body>
            <header class="main-header">
                <div class="top-header">
                <div class="form">
                  <img class="logo" src="images/Logos/Nuevo Logo 2 (2).png" alt="">
                <div class="search-box">
                <div class="busqueda">
                  <input class="barra" type="Lugar para poner la barra de búsqueda">
                 <nav class="main-nav">
                  <ul class="right-nav">
                    <li><a href="">Carrito</a></li>
                    <li><a href="">Tu Cuenta</a></li>
                </ul>
              </header>  
            
            <section class="form-login">
                <div><img class="logo-chico" src = "images/logos/logo2.png" alt="Banner Mundo Mascotas"></div>
                <form>
                    <div class="row mb-3">
                      <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                      <div class="col-sm-10">
                        <input type="email" class="form-control" id="inputEmail3" required>
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="inputPassword3" class="col-sm-2 col-form-label">Contraseña</label>
                      <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputPassword3" required>
                      </div>
                      <div class="col-xl-8">
                        <!-- Detalles de cuenta -->
                        <div class="card mb-4">
                            <div class="card-header">Detalles de Cuenta</div>
                            <div class="card-body">
                                <form>
                                    <!-- Nombre de usuario -->
                                    <div class="mb-3">
                                        <label class="small mb-1" for="inputUsername">Nombre de usuario)</label>
                                        <input class="form-control" id="inputUsername" type="text" placeholder="Enter your username" value="username">
                                    </div>
                                    <!-- Form Row-->
                                    <div class="row gx-3 mb-3">
                                        <!-- Nombre -->
                                        <div class="col-md-6">
                                            <label class="small mb-1" for="inputFirstName">Nombre</label>
                                            <input class="form-control" id="inputFirstName" type="text" placeholder="Enter your first name" value="Juan">
                                        </div>
                                        <!-- Apellido -->
                                        <div class="col-md-6">
                                            <label class="small mb-1" for="inputLastName">Apellido</label>
                                            <input class="form-control" id="inputLastName" type="text" placeholder="Enter your last name" value="Perez">
                                        </div>
                                    </div>
            

                    </div>
                    <button type="submit" class="btn btn-primary"><a href="/miCuenta">Sign in</a></button>
                    <span class="next"><a href="/login/olvido">¿Olvidaste tu contraseña?</a></span>
                    <span class="next"><a href="/login/registrate">Registrate en Mundo Mascotas</a></span>
                  </form>
            </section>

        </body>