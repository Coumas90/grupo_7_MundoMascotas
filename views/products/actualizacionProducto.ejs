<!DOCTYPE html>
  <html lang ="es">
    <head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
      <link rel="stylesheet" href="/css/register.css">
    </head>
    <body>
      <div class="form">
        <span class="form__title">Editar producto</span>
        <div class="container products-wrapper">
          <form action="/administrar/<%=Product.id_product%>>" method="POST" enctype="multipart/form-data">
            <div class="form__input">
              <label for="name" class="form-label">Nombre del producto:</label>
              <input type="text" class="form-input" id="name" placeholder="Ej: Alimento balanceado" required name="Nombre" value="<%= Product.name%>">
              <span class="bar"></span>
            </div>
            <div class="form__input">
              <label for="description" class="form-label">Descripcion del producto:</label>
              <textarea class="form-input" id="description" required name="description" value="<%= Product.description%>"></textarea>
              <span class="bar"></span>
            </div>
            <div class="form__input">
              <label for="id_brand">Seleccionar marca:</label>
              <select class="selector" required aria-label="select example" name="id_brand">
                <% for (let i=0; i < brands.length; i++){ %>
                  <% if (let i=0; i < brands.length; i++){%<
                      <option value="<%= brands[i].id_brand%>" name="id_brand" selected>
                        <%= marcas[i].name_brand%>
                      </option>
                    <% } else {%>
                      <option value="<%= brands[i].id_brand%>" name="id_brand">
                        <%= marcas[i].name_brand%>
                      </option>
                    <%} %}
              </select>
              <span class="bar"></span>
            </div>
            <div class="form__input">
              <label>Seleccionar Categoria:</label>
              <select for="id_category" class="selector" required aria-label="select example" name="id_category">
                <% for (let i=0; i < categories.length; i++){ %>
                <option value="<%= categories[i].id_category%>" name="id_category">
                  <%= categories[i].name_category%>
                </option>
                <% } %>
              </select>
              <span class="bar"></span>
            </div>
            <div class="form__input">
              <label for="price" class="form-label">Precio del producto:</label>
              <input type="number" class="form-input" placeholder="Ej: 3000" id="price" required name="price" value="<%= Product.price%>">
              <span class="bar"></span>
            </div>
            <div class="form__input">
              <label for="discount" class="form-label">Descuento:</label>
              <input type="number" class="form-input" placeholder="Ej: 25" id="discount" name="discount" value="<%= Product.discount%>">
              <span class="bar"></span>
            </div>
            <div class="form__input">
              <label for="id_color">Seleccionar color:</label>
              <select class="selector" required aria-label="select example" name="id_color">
                <% for (let i=0; i < colores.length; i++){ %>
                <option value="<%= colores[i].id_color%>" name="id_color">
                  <%= colores[i].name_color%>
                </option>
                <% } %>
              </select>
              <span class="bar"></span>
            </div>
            <div class="form__input">
              <label for="id_size">Seleccionar talla:</label>
              <select class="selector" required aria-label="select example" name="id_size">
                <% for (let i=0; i < talles.length; i++){ %>
                <option value="<%= talles[i].id_size%>" name="id_size">
                  <%= talles[i].name_size%>
                </option>
                <% } %>
              </select>
              <span class="bar"></span>
            </div>
            <div class="form__input">
              <label for="id_weight">Seleccionar peso del producto:</label>
              <select class="selector" required aria-label="select example" name="id_weight">
                <% for (let i=0; i < pesos.length; i++){ %>
                <option value="<%= pesos[i].id_weight%>" name="id_weight">
                  <%= pesos[i].name_weight%>
                </option>
                <% } %>
              </select>
              <span class="bar"></span>
            </div>
            <div class="form__input">
              <label for="id_pet">Seleccionar mascota:</label>
              <select class="selector" required aria-label="select example" name="id_pet">
                <% for (let i=0; i < mascotas.length; i++){ %>
                <option value="<%= mascotas[i].id_pet%>" name="id_pet">
                  <%= mascotas[i].name_pet%>
                </option>
                <% } %>
              </select>
              <span class="bar"></span>
            </div>
            <div class="form__input">
              <label for="image">Adjuntar imagen del producto:</label>
              <input type="file" name="image" id="image" accept= "pdf, jpeg, jpg" required>
              <span class="bar"></span>
          </div>
            <div class="mb-3">
              <button class="btn btn-primary" type="submit" >Guardar producto</button>
              <a href="/administrar" class="btn btn-warning">Volver al Administrador</a>
            </div>
          </form>
        </div>
      </div>
      <%- include('../partials/footer.ejs') %>
    </body>
  </html>
