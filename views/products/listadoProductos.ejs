<!DOCTYPE html>

<html lang="es">

  <%- include('../partials/head.ejs') %>
<body>
  <%- include('../partials/header.ejs') %>
    <main>
        <section>
            <% filtrados.forEach(product => { %>
            <button class="btn btn-outline-primary" disabled type="submit">Ver más productos</button>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <div class="col">
                  <div class="card h-100">
                    <img src="images/Productos/<%= product.imagen %>" class="card-img-top" alt="Producto1">
                    <div class="card-body">
                      <h5 class="card-title"><%= product.nombre %></h5>
                      <div class="main-article">
                        <i class="fas fa-truck"></i>
                        <p class="price"><%= product.precio %></p>
                        <p class="discount"><%= product.descuento %></p>
                        <button class="btn btn-primary btn-sm" type="submit">Comprar</button>
                        <button class="btn btn-secondary btn-sm" type="submit">Agregar al carrito</button>
                    </div>
                    </div>
                  </div>
                </div>
                <% }) %>
        </section>
        <section>
            <div class="card">
                <div class="card-body">
                    Registrate y obtené 15% off
                    <span>
                        <button class="btn btn-primary btn-sm" type="submit">Quiero mi cupón</button>
                    </span>
                </div>
            </div>
        </section>
    </main>
    <%- include('../partials/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>
</body>
</html>