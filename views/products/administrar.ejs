<!DOCTYPE html>
<html lang ="es">
    <%- include('../partials/head.ejs') %>
    <header>
        <div class="contenedor">
        <div class="top-header">
            <span class="logo-chico">
                <a href="/"><img class="logo-chico"  src="/images/Logos/logo5.png" alt="Logo Mundo Mascotas" class="logo_img"></a>
            </span>
        </div>
    </header>    
    <body>
        <section class="row">
            <article class="col-12"><h2 class="text-black text-center pt-2">Administrar datos</h2></article>
            <div class="contenedornav" role="group" aria-label="Vertical button group">
                <button type="button" class="btn btn-dark"><a href="/administrar/creacion" class="text-black">Agregar un producto</a></button>
                <button type="button" class="btn btn-dark"><a href="/administrar/tallas" class="text-black">Agregar una talla</a></button>
                <button type="button" class="btn btn-dark"><a href="/administrar/marcas" class="text-black">Agregar una marca</a></button>
                <button type="button" class="btn btn-dark"><a href="/administrar/colores" class="text-black">Agregar colores</a></button>
                <button type="button" class="btn btn-dark"><a href="/administrar/mascotas" class="text-black">Agregar mascotas</a></button>
                <button type="button" class="btn btn-dark"><a href="/administrar/mediosdepago" class="text-black">Agregar medios de pago</a></button>
                <button type="button" class="btn btn-dark"><a href="/administrar/pesos" class="text-black">Agregar medidas</a></button>
                <button type="button" class="btn btn-dark"><a href="/administrar/envios" class="text-black">Agregar medios de envio</a></button>
              </div>
              <article class="col-12"><h2 class="text-black text-center pt-2">Administrador de Productos</h2></article>
            <article class="col-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">TÃ­tulo</th>
                            <th scope="col">Ver producto</th>
                            <th scope="col">Editar producto</th>
                            <th scope="col">Eliminar producto</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% listadoProductos.forEach(listadoProductos => { %>
                            <tr>
                                <td><%= listadoProductos.idProductos %></td>
                                <td><%= listadoProductos.Nombre %></td>
                                <td><a href="/productDetail/<%= listadoProductos.idProductos %>" class="text-black">Link</a></td>
                                <td><a href="/administrar/<%= listadoProductos.idProductos %>/editar" class="text-black">Editar</a></td>
                                <td><a href="/administrar/delete/<%= listadoProductos.idProductos %>?_method=DELETE" class="text-black">Borrar</a></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </article>
        </section>
    </body>
</html>