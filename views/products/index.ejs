<!DOCTYPE html>

<html lang="es">
  <%- include('../partials/head.ejs') %>
<body>
  <%- include('../partials/header.ejs') %>
    <main>
        <section class="banner">
          <a href="/marca/15"><img class="banner" src="images/Banners/BannerHeader.png" class="" alt="Foto1 Carrusel"></a>
        </section>

        <section class="cuerpo-pagina">
          <h2>Productos en oferta!</h2>
          <div class ="listadoProductos">
            <% productos.filter(producto=> {
              if(producto.oferta === "si") {%>
            <article class="detalleProducto">
              <a class="redireccion" href="/productDetail/<%=producto.id_product%>">
                <div class="col">
                  <div class="card h-100">
                    <img src="./images/Productos/<%= producto.image %>" class="card-img-top" alt="">
                    <div class="card-body">
                      <h5 class="card-title" ><%= producto.name %></h5>
                      <div class="main-article">
                        
                        <p class="price">$ <%= producto.price %></p>
                        <p class="discount">-<%= producto.discount %>%</p>
                        <!-- <a class="redireccion" href="/productCart"><button class="btn btn-primary btn-sm" type="submit">Comprar</button></a> -->
                        <a class="redireccion" href="/productCart"><button class="btn btn-success btn-lg" type="submit">Agregar al carrito</button></a>
                        <span class="iconos-detalle-producto">
                          <div class="actions-list">
                            <div>
                              <!-- Button trigger modal -->
                              <i class="fa-solid fa-truck" data-bs-toggle="modal" data-bs-target="#exampleModal1"></i>
                              <!-- Modal -->
                              <span class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="medio-envio" aria-hidden="true">
                                <div class="modal-dialog">
                                <div class="modal-content">
                                  <div class="modal-header">
                                  <h1 class="modal-title fs-5" id="medio-envio">Métodos de entrega</h1>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                  </div>
                                  <div class="modal-body">
                                  <img src="/images/Marcas/logos-mensajeria1.jpg">
                                  </div>
                                </div>
                                </div>
                              </span>
                              </div>
                          </div>
                          <div class="actions-list">
                            <div>
                              <!-- Button trigger modal -->
                              <i class="fa-regular fa-credit-card" data-bs-toggle="modal" data-bs-target="#exampleModal2"></i>
                              <!-- Modal -->
                              <span class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="medio-pago" aria-hidden="true">
                                <div class="modal-dialog">
                                <div class="modal-content">
                                  <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="medio-pago">Medios de pago</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                  </div>
                                  <div class="modal-body">
                                    <img src="/images/Marcas/mediodepago_iconos.jpg">
                                  </div>
                                  </div>
                                </div>
                                </span>
                              </div>
                          </div>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>             
            </article>
              <% }}) %>
          </div>
        </section>

        <section class="cuerpo-pagina">
            <h2>Destacados!</h2>
            <div class ="listadoProductos">
              <% productos.forEach(productos=> { %>
              <article class="detalleProducto">
                <a class="redireccion" href="/productDetail/<%=productos.id_product%>">
                  <div class="col">
                    <div class="card h-100">
                      <img src="/images/Productos/<%= productos.image %>" class="card-img-top" alt="">
                      <div class="card-body">
                        <h5 class="card-title" ><%= productos.name %></h5>
                        <div class="main-article">
                          <p class="price">$ <%= productos.price %></p>
                          <p class="discount">-<%= productos.discount %>%</p>
                          <!-- <a class="redireccion" href="/productCart"><button class="btn btn-primary btn-sm" type="submit">Comprar</button></a> -->
                          <a class="redireccion" href="/productCart"><button class="btn btn-success btn-lg" type="submit">Agregar al carrito</button></a>
                          <span class="iconos-detalle-producto">
                            <div class="actions-list">
                              <div>
                                <!-- Button trigger modal -->
                                <i class="fa-solid fa-truck" data-bs-toggle="modal" data-bs-target="#exampleModal1"></i>
                                <!-- Modal -->
                                <span class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="medio-envio" aria-hidden="true">
                                  <div class="modal-dialog">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="medio-envio">Métodos de entrega</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                    <img src="/images/Marcas/logos-mensajeria1.jpg">
                                    </div>
                                  </div>
                                  </div>
                                </span>
                                </div>
                            </div>
                            <div class="actions-list">
                              <div>
                                <!-- Button trigger modal -->
                                <i class="fa-regular fa-credit-card" data-bs-toggle="modal" data-bs-target="#exampleModal2"></i>
                                <!-- Modal -->
                                <span class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="medio-pago" aria-hidden="true">
                                  <div class="modal-dialog">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                      <h1 class="modal-title fs-5" id="medio-pago">Medios de pago</h1>
                                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                      <img src="/images/Marcas/mediodepago_iconos.jpg">
                                    </div>
                                    </div>
                                  </div>
                                  </span>
                                </div>
                            </div>
                          </span>
                          </div>
                    </div>
                  </div>              
                </article>
                <% }) %>
              </div>
          </section>

        <section class="banner-inferior">
            <h2>Marcas destacadas</h2>
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <a href="/marca/3"><img src="images/Marcas/Banner1.jpg" class="d-block w-100" alt="marca1"></a>
                </div>
                <div class="carousel-item">
                  <a href="/marca/15"><img src="images/Marcas/Banner2.jpg" class="d-block w-100" alt="marca2"></a>
                </div>
                <div class="carousel-item">
                  <a href="/marca/13"><img src="images/Marcas/Banner3.jpg" class="d-block w-100" alt="marca3"></a>
                </div>
                </div>
              </div>
            </div>
        </section>
    </main>

    <%- include('../partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>
</body>
</html>