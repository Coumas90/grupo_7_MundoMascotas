<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/header.ejs') %>
    <section class="banner">
      <a href="/marca/15"><img class="banner" src="images/Banners/bg1_2000x1549471867.jpeg" class="" alt="Foto1 Carrusel"></a>
    </section>

        <!-- todos los productos -->
        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Resultados de la búsqueda: ¿?</h2>
                </div>
                <% if (productosBuscados.length > 0) { %>
                    <% productosBuscados.forEach(productoBuscado => { %>
                        <div class="col-12 col-sm-6 col-lg-3">
                            <section class="product-box">
                                <a href="/productDetail/<%= productoBuscado.id %>">
                                    <figure class="product-box_image">
                                        <img src="images/Productos/<%= productoBuscado.imagen %>" alt="">
                                    </figure>
                                    <article class="product-box_data">
                                        <i class="fas fa-truck"></i>
                                        <p class="price"><%= productoBuscado.precio %></p>
                                        <p class="discount"><%= productoBuscado.descuento %></p>
                                        <a class="redireccion" href="/productCart"><button class="btn btn-success btn-lg" type="submit">Agregar al carrito</button></a>
                        <span class="iconos-detalle-producto">
                          <div class="actions-list">
                            <div>
                              <!-- Button trigger modal -->
                              <i class="fa-solid fa-truck" data-bs-toggle="modal" data-bs-target="#exampleModal1"></i>
                              <!-- Modal -->
                              <span class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="medio-envio" aria-hidden="true">
                                <div class="modal-dialog">
                                <div class="modal-content">
                                  <div class="modal-header">
                                  <h1 class="modal-title fs-5" id="medio-envio">Métodos de entrega</h1>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                  </div>
                                  <div class="modal-body">
                                  <img src="/images/Marcas/logos-mensajeria1.jpg">
                                  </div>
                                </div>
                                </div>
                              </span>
                              </div>
                          </div>
                          <div class="actions-list">
                            <div>
                              <!-- Button trigger modal -->
                              <i class="fa-regular fa-credit-card" data-bs-toggle="modal" data-bs-target="#exampleModal2"></i>
                              <!-- Modal -->
                              <span class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="medio-pago" aria-hidden="true">
                                <div class="modal-dialog">
                                <div class="modal-content">
                                  <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="medio-pago">Medios de pago</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                  </div>
                                  <div class="modal-body">
                                    <img src="/images/Marcas/mediodepago_iconos.jpg">
                                  </div>
                                  </div>
                                </div>
                                </span>
                              </div>
                          </div>
                        </span>
                                    </article>
                                </a>
                            </section>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="col-12">
                        <h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
                    </div>
                <% } %>
            </div>
        </div>
        <!-- /todos los productos -->
    
        <%- include('../partials/footer.ejs') %>

        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>
    </body>
</html>